generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Note {
  id            DateTime  @default(now())
  title         String
  desc          String
  isBookmarked  Boolean
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
}

type Category {
  id         DateTime  @default(now())
  category  String
  notes      Note[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  avatar     String?
  username   String?   
  email      String    @unique
  password   String
  notes      Category[]
  bookmarks  Note[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
}